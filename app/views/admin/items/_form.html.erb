<%= form_for [:admin, @item], :role => "form" do |f| %>

<% if @item.errors.any? %>
		<ul>
  			<% @item.errors.full_messages.each do |msg| %>
    			<li><%= msg %></li>
  			<% end %>
		</ul>
	<% end %>

	<div class="form-group">
    <%= f.label :name, "Name*" %>
    <%= f.text_field :name, :class => "form-control" %>
  	</div>
	
	<div class="form-group">
	<%= f.label :description, "Description" %>
	<%= f.text_area :description, :class => "form-control" %>
	</div>

	<div class="form-group">
	<%= f.label :starting_time, "Start" %>
	<%= f.text_field :starting_time, :class => "datepicker" %>
	</div>

	<div class="form-group">
	<%= f.label :ending_time, "End" %>
	<%= f.text_field :ending_time, :class => "datepicker" %>
	</div>

	<div class="form-group">
	<%= f.label :bid_unit, "Bid Unit" %>
	<%= f.text_field :bid_unit, :class => "form-control" %>
	</div>

	<div class="form-group">
	<%= f.label :starting_bid, "Starting Bid" %>
	<%= f.text_field :starting_bid, :class => "form-control" %>
	</div>

	<div class="btn-group btn-group-lg"><%= f.submit "Submit", :class => "btn btn-default" %></div>

<% end %>